@model IEnumerable<BikeShopv2.Models.LOAISANPHAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>QUẢN LÝ DANH SÁCH LOẠI SẢN PHẨM</h2>

<p>
    @Html.ActionLink("THÊM MỚI", "Create")
</p>
<table class="table">
    <tr>
        <th>
            TÊN LOẠI SẢN PHẨM
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoai)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_LSP }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID_LSP }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_LSP })
            </td>
        </tr>
    }

</table>
